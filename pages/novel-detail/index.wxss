/* pages/novel-detail/index.wxss */
.novel-detail {
    padding: 20rpx;
}

.top {
    display: flex;
}

.top .left {
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    font-size: 34rpx;
    flex: 1;
}

.top .right {
    width: 280rpx;
    height: 360rpx;
}

.top .right .img {
    width: 100%;
    height: 100%;
}

.top .left .title {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    width: 400rpx;
}

.top .left view:first-child {
    margin-top: 50rpx;
}

.top .left view {
    margin: 16rpx 0;
}

.top .left .author {
    color: #999999;
}

.collect {
    display: flex;
    align-items: center;
}

.collect .img {
    width: 50rpx;
    height: 50rpx;
    margin-right: 10rpx;
}

.bottom .tab {
    display: flex;
    margin-bottom: 16rpx;
}

.bottom .tab .item {
    padding: 20rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;
    display: inline-block;
}

.active {
    border-bottom: 4rpx solid #f0bd8a;

}

.chapter-item {
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #eeeeee;
    display: flex;
    justify-content: space-between;
    align-items: center;
}