/* pages/comic/index.wxss */


.top {
    position: relative;
    height: 400rpx;

}

.top .img {
    width: 100%;
    height: 100%;
    position: absolute;
    z-index: -1;

}

.top .position {
    position: relative;
    top: 280rpx;
    left: 20rpx;
    color: #fff;
    font-size: 28rpx;
}

.top .position .author,
.top .position .theme {
    font-size: 22rpx;
    margin-top: 4rpx;
}

.top .popularity {
    position: relative;
    left: 78%;
    top: 230rpx;
    width: 200rpx;
    padding: 10rpx;

    color: #fff;
    background-color: rgba(0, 0, 0, .6);
    font-size: 20rpx;
    border-radius: 25rpx;
}

.read {
    display: flex;
    justify-content: space-around;
    margin-top: 30rpx;
}

.read .collect {
    width: 35%;
    text-align: center;
    margin: auto;
    font-size: 28rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.read .collect .img {
    width: 50rpx;
    height: 50rpx;
}

.read .read-btn {
    width: 60%;
    height: 90rpx;
    text-align: center;
    border-radius: 40rpx;

    background-color: #f0bd8a;
    color: #fff;
}

.tab-container {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20rpx;
    height: 90rpx;
    border-bottom: 2rpx solid #e5e5e5;
}

.tab-container .item {
    width: 160rpx;
    text-align: center;
}

.active {
    padding: 22rpx;
    border-bottom: 5rpx solid #f0bd8a;
}

.chapter-detail {
    padding: 0 10rpx;
    font-size: 28rpx;
    margin-top: 20rpx;
    padding-bottom: 30rpx;
    border-bottom: 10rpx solid #eeeeee;
}

.recommend {
    padding: 0 10rpx;
    margin-top: 10rpx;
    font-size: 28rpx;
}

.scroll-content {
    white-space: nowrap;
    margin-top: 20rpx;
}

.scroll-content .item {
    width: 200rpx;
    height: auto;
    display: inline-block;
    margin-right: 20rpx;
}

.scroll-content .img {
    width: 200rpx;
    height: 250rpx;
    border-radius: 15rpx;
    margin-right: 20rpx
}

.scroll-content .item .title,
.scroll-content .item .author {
    text-overflow: ellipsis;
    overflow: hidden;
    white-space: nowrap;
}

.scroll-content .item .author {
    font-size: 24rpx;
    color: #333333;
}

/* 目录 */
.directory {
    padding: 0 10rpx;
}

.directory .title {
    margin-top: 20rpx;
}

.directory .title .update {
    font-size: 24rpx;
    color: #333333;
}

.directory .content .item {
    display: flex;
    align-items: center;

    padding: 20rpx 0;
    border-bottom: 2rpx solid #eeeeee;
}

.directory .content .item .img {
    width: 260rpx;
    height: 150rpx;
    margin-right: 20rpx;
    margin-top: 20rpx;

}