page {
    background-color: #f5f5f5;
    padding: 0 20rpx;
    box-sizing: border-box;
}

.test .right {
    display: flex;
    justify-content: flex-end;
    margin: 30rpx 0;
}

.test .left {
    display: flex;
    margin: 10rpx 0;
    justify-content: flex-start;

}

.test .info {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.test .right .info {
    align-items: flex-end;

}

.test .left .info {
    align-items: flex-start;
}

.test .left .info {
    margin-left: 10rpx;
}

.test .right .info {
    margin-right: 10rpx
}

.test .info .nickname {
    padding: 6rpx;

}

.test .info .msg {
    max-width: 60vw;
    word-break: break-all;
    padding: 16rpx;
    box-sizing: border-box;
    height: auto;
    background-color: aquamarine;
    border-radius: 10rpx;
}

.test .left .info .msg {
    background-color: #fff;
}

.test .img {
    width: 100rpx;
    height: 100rpx;
}

.chat-container {
    box-sizing: border-box;
    overflow: hidden;

}



.bottom {
    display: flex;
    position: fixed;
    left: 0;
    right: 0;
    bottom: 0;
    background-color: rgb(247, 241, 241);
    border-radius: 40rpx;
    padding: 30rpx;
    overflow: hidden;
    min-height: 60rpx;
    max-height: 150rpx;
    margin-top: 10rpx;
    /* box-sizing: border-box; */
}

.img,
.bottom-img {
    width: 50rpx;
    height: 100%;
}

.bottom-img {
    margin-top: 10rpx;
    margin-right: 10rpx;
    margin-left: 10rpx;
}


.bottom-img .img {
    width: 100%;
}

.send-value {
    background-color: white;
    flex: 1;
    padding: 10rpx;
    max-height: 120rpx;
}

.hold-speak {
    flex: 1;
    text-align: center;
    display: inline-block;
    padding-top: 8rpx;
}