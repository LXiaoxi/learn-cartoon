.content {
    display: flex;
    flex-wrap: wrap;
    justify-content: flex-start;
}

.item:nth-child(3n-1) {
    margin-left: 10rpx;
    margin-right: 10rpx;
}

.item:nth-child(3n-2) {
    margin-left: 5rpx;
}

.item {
    width: 32%;
    margin: 16rpx 0;
}

.item .img {
    width: 100%;
    height: 360rpx;
}

.item .bottom view {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}