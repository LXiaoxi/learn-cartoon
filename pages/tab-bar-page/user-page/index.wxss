.user-page {
    padding: 10rpx;
    box-sizing: border-box;
}

.loginBtn {
    width: 200rpx;
    height: 80rpx;
    line-height: 80rpx;
    background-color: #ff976a;
    font-size: 28rpx;
    margin-top: 20rpx;
    margin-left: 10rpx;
}

.content {
    padding: 0 20rpx;
}

.content .item {
    height: 100rpx;
    line-height: 100rpx;
}

.userInfo {
    display: flex;
    align-items: center;
}

.userInfo .img {
    width: 200rpx;
    height: 200rpx;
    border-radius: 100rpx;
    margin-right: 10rpx;
}