.content .search-record,
.content .search-result,
.content .search-result .item {
    padding: 20rpx;
    box-sizing: border-box;
}

.search-content {
    display: flex;
    align-items: center;
    flex-wrap: wrap;
    justify-content: space-around;
}

.search-content i {
    width: 160rpx;
}

.search-content .record-item {
    width: 150rpx;
    height: 70rpx;
    line-height: 70rpx;
    margin: 20rpx 0;
    margin-left: 10rpx;
    text-align: center;
    border-radius: 20rpx;
    background-color: #ebebeb;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    padding: 0 10rpx;
    box-sizing: border-box;

}

.search-record .top {
    display: flex;
    justify-content: space-between;
    align-items: center;
}