/* components/module-v2/index.wxss */
.module-v2 {
    padding: 20rpx;
    box-sizing: border-box;
    display: flex;
    flex-wrap: wrap;
}

.top {
    margin-bottom: 30rpx;
    display: flex;
}

.img {
    width: 220rpx;
    height: 340rpx;
    border-radius: 20rpx;
}

.rigth {
    margin-left: 20rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.rigth .title {
    font-size: 40rpx;
    color: #000;
}

.rigth view {
    margin: 14rpx 0;
    color: #999999;
}

.bottom:nth-child(3n) {
    margin-left: 0;
}

.bottom {
    width: 30%;
    margin-left: 30rpx;
    margin-bottom: 20rpx;
}

.bottom-info .title {
    font-size: 40rpx;
}

.bottom-info view {
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    margin-top: 10rpx;
}