/* components/module/index.wxss */
.module {
    width: 100vw;
    padding: 20rpx;
    box-sizing: border-box;

}

.top .top-img {
    height: 500rpx;
}

.top .top-img image {
    width: 100%;
    border-radius: 20rpx;
}

.title,
.feature {
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.title {
    font-size: 36rpx;
}

.feature {
    font-size: 28rpx;
    color: #999999;
}

.content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 20rpx;
}

.content-item {
    display: flex;
    flex-direction: column;
    width: 48%;
    margin-top: 20rpx;
}

.content-item .img {
    width: 100%;
    border-radius: 20rpx;
    margin-bottom: 10rpx;
}